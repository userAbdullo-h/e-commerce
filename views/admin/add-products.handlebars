<h1>Add Product</h1>

<form action='/admin/add-products' method='post'>
	<div class='form-floating mb-3'>
		<input
			class='form-control'
			id='title'
			placeholder='Title'
			name='title'
			required
		/>
		<label for='title'>Title</label>
	</div>

	<div class='form-floating mb-3'>
		<input
			class='form-control'
			id='image'
			placeholder='Image URL'
			name='image'
			required
		/>
		<label for='image'>Image</label>
	</div>

	<div class='form-floating mb-3'>
		<input
			class='form-control'
			id='price'
			placeholder='Price'
			name='price'
			type='number'
			step='0.01'
			required
		/>
		<label for='price'>Price</label>
	</div>

	<button type='submit' class='btn btn-success'>Submit</button>
</form>